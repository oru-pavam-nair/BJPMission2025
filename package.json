{
  "name": "kerala-map-standalone",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Standalone Kerala Map Application - Interactive political map visualization",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:production": "NODE_ENV=production vite build",
    "build:optimized": "node scripts/build-optimized.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:auth": "vitest run src/tests/authentication.test.tsx",
    "test:map": "vitest run src/tests/mapInteractions.test.tsx",
    "test:data": "vitest run src/tests/dataLoading.test.tsx",
    "test:mobile": "vitest run src/tests/mobile*.test.tsx",
    "test:pdf": "vitest run src/tests/*pdf*.test.tsx",
    "bundle-analyzer": "npx vite-bundle-analyzer dist",
    "size-check": "bundlesize",
    "setup-domain": "node scripts/setup-domain.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "html2pdf.js": "^0.10.3",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.344.0",
    "papaparse": "^5.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "bundlesize": "^0.18.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^3.2.4"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/js/index-*.js",
      "maxSize": "800kb"
    },
    {
      "path": "./dist/assets/css/*.css",
      "maxSize": "50kb"
    }
  ]
}
